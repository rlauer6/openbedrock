# ident "@(#) $Header$"
# ident "@(#)        $Name$"

package SIS::Array;

use strict;
use Tie::Array;

BEGIN
{
    use Exporter ();
    use vars	qw ($VERSION @ISA);
    $VERSION	= do { my @r = (q$Revision$ =~ /\d+/g); sprintf "%d."."%02d" x $#r, @r };
    @ISA	= qw (Tie::StdArray);
}

sub TIEARRAY
{
    my $class = shift;
    my $self = bless [], $class;
    push @{$self}, @_ if @_ > 0;
    $self;
}

sub new
{
    my $proto = shift;
    my $class = ref ($proto) || $proto;
    my $self = bless [], $class;
    tie @{$self}, $class, @_;
    $self;
}

sub set
{
    my $self = shift;
    my ($index, $value) = @_;
    my $old = $self->[$index];
    $self->[$index] = $value;
    $old;
}

sub get		{$_[0]->[$_[1]]}
sub length	{scalar(@{$_[0]})}
sub push	{my $a = shift; push @{$a}, @_}
sub pop		{pop @{$_[0]}}
sub shift	{shift @{$_[0]}}
sub unshift	{my $self = shift; unshift @{$self}, @_}
sub splice	{my $self = shift; splice @{$self}, @_}
sub join	{join($_[1], @{$_[0]})}
sub isEmpty	{@{$_[0]} > 0 ? 0 : 1}

1;

