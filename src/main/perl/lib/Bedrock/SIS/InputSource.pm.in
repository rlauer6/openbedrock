package SIS::InputSource;

use strict;

BEGIN
{
    use Exporter ();
    use vars	qw ($VERSION @ISA);
    $VERSION	= do { my @r = (q$Revision$ =~ /\d+/g); sprintf "%d."."%02d" x $#r, @r };
    @ISA	= qw (Exporter);
}

use Text::URLEncode;

sub new
{
    my $class = shift;
    bless {}, $class;
}

sub init
{
    my $self = shift;
    die "REQUEST_METHOD not set in environment.\n" unless $ENV{'REQUEST_METHOD'};
    if ( $ENV{'REQUEST_METHOD'} eq 'GET' ) {
	$self->{'query_string'} = $ENV{'QUERY_STRING'};
    } elsif ( $ENV{'REQUEST_METHOD'} eq 'POST' ) {
	# Include QUERY_STRING too if present
	my $buf;
	$self->{'query_string'} = '';
	if ( defined($ENV{'QUERY_STRING'} and length($ENV{'QUERY_STRING'}) > 0 ) ) {
	    $buf = $ENV{'QUERY_STRING'};
	    $buf .= '&' unless $buf =~ /\&$/;
	    $self->{'query_string'} = $buf;
	}

	die "CONTENT_LENGTH not set in environment.\n" unless defined($ENV{'CONTENT_LENGTH'});
	read(STDIN, $buf, $ENV{'CONTENT_LENGTH'}) if $ENV{'CONTENT_LENGTH'} > 0;
	$self->{'query_string'} .= $buf;
    } else {
	die "Unknown REQUEST_METHOD: $ENV{'REQUEST_METHOD'}";
    }

    my $param = {};
    for (split('&', $self->{'query_string'})) {
	my ($key, $value) = split '=';
	&Text::URLEncode::decode($value);
	if ( exists $param->{$key} ) {
	    $param->{$key} = [$param->{$key}] unless ref ($param->{$key}) eq 'ARRAY';
	    push @{$param->{$key}}, $value;
	} else {
	    $param->{$key} = $value;
	}
    }

    $self->{'param'} = $param;
}

sub param
{
    my $self = shift;
    $self->init unless $self->{'param'};
    return keys(%{$self->{'param'}}) unless @_ > 0;
    return @{$self->{'param'}}{@_};
}

1;

