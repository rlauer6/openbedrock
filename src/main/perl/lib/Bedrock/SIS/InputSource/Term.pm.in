package SIS::InputSource::Term;

use strict;

BEGIN
{
    use Exporter ();
    use vars	qw ($VERSION @ISA);
    $VERSION	= do { my @r = (q$Revision$ =~ /\d+/g); sprintf "%d."."%02d" x $#r, @r };
    @ISA	= qw (Exporter);
}

sub new
{
    my $class = shift;
    my $self = bless {}, $class;
    for (@ARGV) {
	my ($key, $value) = split /=/, $_, 2;
	$self->{$key} = $value;
    }
    $self;
}

sub param
{
    my $self = shift;
    return keys %{$self} unless @_ > 0;
    my (@values, $t);
    for (@_) {
	if ( exists $self->{$_} ) {
	    push @values, $self->{$_};
	    next;
	}

	unless ( -t STDIN ) {
	    push @values, undef;
	    next;
	}

	$| = 1;
	print "Value for $_ ? ";

	my $value = <STDIN>;
	chomp $value;
	push @values, $value;
    }
    wantarray ? @values : $values[0];
}

1;

