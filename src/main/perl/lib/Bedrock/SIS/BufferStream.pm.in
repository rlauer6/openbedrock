package SIS::BufferStream;

use strict;
use Symbol;
use IO::Scalar;

BEGIN
{
    use Exporter ();
    use vars	qw ($VERSION @ISA);
    $VERSION	= do { my @r = (q$Revision$ =~ /\d+/g); sprintf "%d."."%02d" x $#r, @r };
    @ISA	= qw(Exporter);
}

sub new
{
    my $class = shift;
    my $scalar = shift;
    my $self = gensym;
    tie *{$self}, 'IO::Scalar', \$scalar;
    bless $self, $class;
    $self;
}

1;

