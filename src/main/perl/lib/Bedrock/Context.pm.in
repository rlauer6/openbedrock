sub output_handler {
  _set(@_, 'OUTPUT_HANDLER');
}

sub apache_handler {
  _set(@_, 'APACHE_HANDLER');
}

sub session {
  _set( @_, 'SESSION');
}

sub config {
  _set(@_, 'CONFIG');
}

sub input {
  _set(@_, 'INPUT');
}

sub header {
  _set( @_, 'HEADER');
}

sub output_vars {
  _set( @_, 'output_vars');
}

# deprecated
sub set_header {
  _set(@_, 'HEADER');
}

sub _set {
  my $self = shift;

  my $key;
  my $value;

  if ( @_ > 1 ) {
    ($value, $key) = @_;
    $self->{$key} = $value;
  }
  else {
    $key = $_[0];
  }

  $self->{$key};
}

