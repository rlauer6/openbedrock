package Bedrock::BedrockXML::Handler;

use strict;
use warnings;

use Bedrock::XML;

use parent qw/Bedrock::Serializer/;
use Role::Tiny::With;
with 'Bedrock::Serializer';

use Data::Dumper;

sub deserialize {
  my $self = shift;
  my $data = shift;

  $data =~s/^[\n\r\s]*(.*?)$/$1/s;

  Bedrock::XML->newFromString($data);
}

sub serialize {
  my $self = shift;
  my $data = shift;

  $data = Bedrock::XML::writeXML($data);
}

1;
