package Bedrock::Cache::Null;

use strict;
use warnings;

use Role::Tiny::With;

# It must verify against the contract, even if it does nothing.
with 'Bedrock::Cache::Engine';

sub new {
  my ($class) = @_;
  return bless {}, $class;
}

# 1. GET: Always a "Miss"
sub get {
  return;  # undef
}

# 2. SET: Always "Success" (we just dropped it on the floor)
sub set {
  return 1;
}

# 3. EXISTS: Always "False"
sub exists {
  return 0;
}

# 4. DELETE: Always "Success"
sub delete {
  return 1;
}

# 5. INIT: No-op
sub init {
  return;
}

1;
