our %TAGS_ENABLED = (
  q{#} => 'TagX::TAG::NoBody::Comment',
  q{?} => 'TagX::TAG::NoBody::NULL',
  else => [
    'TagX::TAG::WithBody::If::Else',
    sub {
      my ( $class, $obj, $raw ) = @_;

      die "Tag is not valid here.\n"
        if ref($obj) !~ /::If|Unless/xsm;

      return ( $obj->else_obj( $class->new ), $raw // 0 );
    }
  ],
  elsif  => sub { return 'else' },
  elseif => sub { return 'else' },
  array  => 'TagX::TAG::NoBody::Array',
  cache  => 'TagX::TAG::WithBody::Cache',
  case   => 'TagX::TAG::NoBody::Case',
  catch  => [
    'TagX::TAG::WithBody::Catch',
    sub {
      my ( $class, $obj, $raw ) = @_;

      die "Tag is not valid here.\n"
        if ref($obj) !~ /TagX::TAG::WithBody::Try|Catch/xsm;

      return ( $obj->catch( $class->new ), $raw // 0 );
    }
  ],
  exec        => sub { return 'pebble' },
  flush       => 'TagX::TAG::NoBody::Flush',
  foreach     => 'TagX::TAG::WithBody::Loop::Foreach',
  hash        => 'TagX::TAG::NoBody::Hash',
  if          => 'TagX::TAG::WithBody::If',
  iif         => 'TagX::TAG::NoBody::Iif',
  include     => 'TagX::TAG::NoBody::Include',
  noexec      => [ 'TagX::TAG::WithBody::NoExec', sub { return spawn( $_[0], $_[1], 1 ); } ],
  null        => 'TagX::TAG::NoBody::NULL',
  open        => 'TagX::TAG::NoBody::Open',
