  raise       => 'TagX::TAG::NoBody::Raise',
  recordset   => 'TagX::TAG::NoBody::RecordSet',
  sink        => 'TagX::TAG::WithBody::Sink',
  snippet     => 'TagX::TAG::WithBody::Snippet',
