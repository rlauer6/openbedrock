#!/usr/bin/perl -w

# ident "@(#) $Header$"
# ident "@(#)        $Name$"

package TagX::TAG::NoBody::Include;

use strict;
use vars qw (@ISA);
use Getopt::Long;
use POSIX qw (strftime);

use TagX::TAG::NoBody;
@ISA = qw (TagX::TAG::NoBody);

sub finalize
{
    my ($self, $tx, @context) = @_;

    local (@ARGV) = @{$self->{'argv'}};
    my %valid;
    &GetOptions(\%valid,
		'file=s',
		'access-time=s',
		'access-time-format=s',
		'modify-time=s',
		'modify-time-format=s',
		'change-time=s',
		'change-time-format=s');
    return unless exists $valid{'file'};
    my @sv = stat ( $valid{'file'} );
    return unless @sv;
    my $input = IO::File->new ( $valid{'file'} );
    return unless $input;
    my $subform = $tx->new ( $input, $tx->{'output'} );
    $subform->{'VARS'} = $tx->{'VARS'};

    if ( exists $valid{'access-time'} ) {
	my $value = $sv[8];
	$value = &strftime ( $valid{'access-time-format'}, localtime( $value ) )
	    if exists $valid{'access-time-format'};
	$subform->param ( $valid{'access-time'}, $value );
    }

    if ( exists $valid{'modify-time'} ) {
	my $value = $sv[9];
	$value = &strftime ( $valid{'modify-time-format'}, localtime( $value ) )
	    if exists $valid{'modify-time-format'};
	$subform->param ( $valid{'modify-time'}, $value );
    }

    if ( exists $valid{'change-time'} ) {
	my $value = $sv[10];
	$value = &strftime ( $valid{'change-time-format'}, localtime( $value ) )
	    if exists $valid{'change-time-format'};
	$subform->param ( $valid{'change-time'}, $value );
    }

    $subform->output;
}

