#!/usr/bin/perl -w

# ident "@(#) $Header$"
# ident "@(#)        $Name$"

package TagX::TAG::WithBody::Catch;

use strict;

BEGIN
{
    use vars	qw ($VERSION @ISA);
    $VERSION	= do { my @r = (q$Revision$ =~ /\d+/g); sprintf "%d."."%02d" x $#r, @r };
}

use Getopt::Long;

use TagX::TAG::WithBody;

@ISA = qw (TagX::TAG::WithBody);

sub parent_try
{
    my $self = shift;
    $self->{'parent_try'} = shift if @_ == 1;
    $self->{'parent_try'};
}
 
sub end_try
{
    my $self = shift;
    $self->parent;
}

sub catch
{
    my $self = shift;
    if ( @_ == 1 ) {
        $self->{'catch'} = shift;
        $self->{'catch'}->parent_try ( exists $self->{'parent_try'} ? $self->{'parent_try'} : $self );
        $self->{'catch'}->parent ( $self->parent );
    }
    $self->{'catch'};
}

sub finalize
{
    my ($self, $tx, @context) = @_;

    if ( exists $self->{'argv'} ) {
	my $string = "@{$self->{'argv'}}";
	if ( $@ =~ /$string/ ) {
	    $self->SUPER::finalize ( $tx, @context );
	} elsif ( $self->catch ) {
	    $self->catch->finalize ( $tx, @context );
	} else {
	    die;
	}
    } else {
	# A catch-all exception handler
	$self->SUPER::finalize ( $tx, @context );
    }
}

