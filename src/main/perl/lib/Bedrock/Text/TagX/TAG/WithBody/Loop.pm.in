#!/usr/bin/perl -w

# ident "@(#) $Header$"
# ident "@(#)        $Name$"

package TagX::TAG::WithBody::Loop;

use strict;

BEGIN
{
    use Exporter ();
    use vars	qw ($VERSION @ISA);
    $VERSION    = do { my @r = (q$Revision$ =~ /\d+/g); sprintf "%d."."%02d" x $#r, @r };
    @ISA	= qw (Exporter);
}

use TagX::TAG::WithBody 1.06;

@ISA = qw (TagX::TAG::WithBody);

sub finalize_children
{
    my ($aref, $tx, @context) = @_;
    for my $child (@{$aref} ) {
	next unless $child;
	if ( ref ($child) ) {
	    $tx->error->location( $child->start_location );
	    $child->finalize ( $tx, @context );
	} else {
	    $tx->out_handle->print( $child );
	}
    }
    scalar(@{$aref});
}

sub parent
{
    my $self = shift;
    if ( @_ == 1 ) {
	my $parent = shift;
	$self->{'parent'} = $parent;
	$self->{'finalize_children'} = \&finalize_children;
    }
    $self->{'parent'};
}

