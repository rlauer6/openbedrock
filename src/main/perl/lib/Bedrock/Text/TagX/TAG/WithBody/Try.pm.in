#!/usr/bin/perl -w

# ident "@(#) $Header$"
# ident "@(#)        $Name$"

package TagX::TAG::WithBody::Try;

use strict;

BEGIN
{
    use vars	qw ($VERSION @ISA);
    $VERSION	= do { my @r = (q$Revision$ =~ /\d+/g); sprintf "%d."."%02d" x $#r, @r };
}

use Getopt::Long;

use TagX::TAG::WithBody;

@ISA = qw (TagX::TAG::WithBody);

sub catch
{
    my $self = shift;
    if ( @_ == 1 ) {
        $self->{'catch'} = shift;
        $self->{'catch'}->parent_try ( exists $self->{'parent_try'} ? $self->{'parent_try'} : $self );
        $self->{'catch'}->parent ( $self->parent );
    }
    $self->{'catch'};
}

sub finalize
{
    my ($self, $tx, @context) = @_;

    local (@ARGV) = @{$self->{'argv'}} if exists $self->{'argv'};
    my %valid;
    &GetOptions(\%valid,
		'verbose');

    my $verbose = delete $valid{'verbose'};

    if ( $verbose ) {
	my ($key, $value);
	my $str = "$self: Options are\n";
	while (($key, $value) = each %valid) {
	    $str .= "\t$key .. ($value)\n";
	}
	$tx->log_message( MSG_DEBUG => $str );
    }

    my $frame = $tx->out_handle->create_frame;

    $tx->log_message( MSG_DEBUG => "$self: Entering <TRY> block .." ) if $verbose;
    eval {
	$self->SUPER::finalize ( $tx, @context );
    };
    $tx->log_message( MSG_DEBUG => "$self: Exited <TRY> block .." ) if $verbose;
    if ( $@ ) {
	$tx->log_message( MSG_DEBUG => "$self: Exception in <TRY> block\n$@" ) if $verbose;
	$tx->param ('@' => $@);
	$tx->out_handle->empty_frame;
	if ( $self->catch ) {
	    $tx->log_message( MSG_DEBUG => "$self: Entering <CATCH> block .." ) if $verbose;
	    $self->catch->finalize ( $tx, @context );
	    $tx->log_message( MSG_DEBUG => "$self: Exited <CATCH> block .." ) if $verbose;
	} else {
	    $tx->log_message( MSG_DEBUG => "$self: No exception handler .. propagating exception" )
		if $verbose;
	    die;
	}
    }
    $tx->log_message( MSG_DEBUG => "$self: Completed try/catch sequence successfully" ) if $verbose;
    $frame->end;
}

