#!/usr/bin/perl -w

# ident "@(#) $Header$"
# ident "@(#)        $Name$"

package TagX::TAG::NoBody::Var;

use strict;
use vars qw (@ISA);
use Getopt::Long;
use Text::URLEncode;

use TagX::TAG::NoBody;
@ISA = qw (TagX::TAG::NoBody);

sub finalize
{
    my ($self, $tx, @context) = @_;

    local (@ARGV) = @{$self->{'argv'}};
    my %valid = ('urlencode' => 0);
    &GetOptions(\%valid,
		'name=s',
		'urlencode!',
		'default=s');
    return unless exists $valid{'name'};
    my $data = $self->resolve_name ( $valid{'name'}, @context );
    unless ( defined ( $data ) ) {
	$data = $valid{'default'} if exists $valid{'default'};
    }
    $tx->log_message ( MSG_DEBUG => "finalizing var <$valid{'name'}> with data <$data>" );
    return unless defined( $data );
    &Text::URLEncode::encode( $data ) if exists $valid{'urlencode'} and $valid{'urlencode'} > 0;
    $tx->{'output'}->print($data);
}

