#!/usr/bin/perl -w

# ident "@(#) $Header$"
# ident "@(#)        $Name$"

package TagX::TAG::NoBody::Var;

use strict;

BEGIN
{
    use vars	qw ($VERSION @ISA);
    $VERSION	= do { my @r = (q$Revision$ =~ /\d+/g); sprintf "%d."."%02d" x $#r, @r };
}

use Getopt::Long;
use Text::URLEncode;

use TagX::TAG::NoBody;

@ISA = qw (TagX::TAG::NoBody);

sub finalize
{
    my ($self, $tx, @context) = @_;

    local (@ARGV) = @{$self->{'argv'}};
    my %valid = ('urlencode' => 0);
    &GetOptions(\%valid,
		'verbose',
		'name=s',
		'urlencode!',
		'default=s');

    my $verbose = delete $valid{'verbose'};
    if ( $verbose ) {
	$self->{'verbose'} = 1;
	my ($key, $value);
	my $str = "$self: Options are\n";
	while (($key, $value) = each %valid) {
	    $str .= "\t$key .. ($value)\n";
	}
	$str .= "Arguments ..(@ARGV)";
	$tx->log_message( MSG_DEBUG => $str );
    }

    unless ( exists $valid{'name'} ) {
	$tx->log_message( MSG_DEBUG => "$self: No name" ) if $verbose;
	return;
    }

    my $name = $valid{'name'};
    my $data = $self->resolve_name ( $name, @context );
    $tx->log_message( MSG_DEBUG => "$self: $name = <$data>" ) if $verbose;

    unless ( defined ( $data ) ) {
	$tx->log_message ( MSG_DEBUG => "$self: $name not defined, default is <$valid{'default'}>" )
	    if $verbose;
	$data = $valid{'default'} if exists $valid{'default'};
    }

    return unless defined( $data );
    if ( $valid{'urlencode'} > 0 ) {
	&Text::URLEncode::encode( $data );
	$tx->log_message ( MSG_DEBUG => "$self: URLEncoded to <$data>" ) if $verbose;
    }

    $tx->out_handle->print($data);
}

