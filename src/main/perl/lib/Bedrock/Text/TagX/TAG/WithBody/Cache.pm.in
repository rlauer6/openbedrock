#!/usr/bin/perl -w

# ident "@(#) $Header$"
# ident "@(#)        $Name$"

package TagX::TAG::WithBody::Cache;

use strict;

BEGIN
{
    use Exporter ();
    use vars	qw ($VERSION @ISA);
    $VERSION    = do { my @r = (q$Revision$ =~ /\d+/g); sprintf "%d."."%02d" x $#r, @r };
}

use TagX::Log 1.01;
use TagX::TAG::WithBody 1.06;

@ISA = qw (TagX::TAG::WithBody);

sub finalize
{
    my $self = shift;
    my $tx = @_ > 0 ? shift : $self->{'TagX'};
    my @context = @_ > 0 ? @_ : ($tx->{'VARS'});

    my $frame = $tx->out_handle->create_frame;
    eval { $self->SUPER::finalize ( $tx, @context ) };
    if ( $@ ) {
	$tx->out_handle->empty_frame;
	chomp $@;
	die "$@\n";
    }
    $frame->end;
}

1;

