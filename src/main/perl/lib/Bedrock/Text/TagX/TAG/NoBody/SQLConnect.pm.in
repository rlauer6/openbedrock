#!/usr/bin/perl -w

# ident "@(#) $Header$"
# ident "@(#)        $Name$"

package TagX::TAG::NoBody::SQLConnect;

use strict;

BEGIN
{
    use Exporter ();
    use vars	qw ($VERSION @ISA);
    $VERSION    = do { my @r = (q$Revision$ =~ /\d+/g); sprintf "%d."."%02d" x $#r, @r };
    @ISA	= qw (Exporter);
}

use DBI;

use TagX::Log 1.01;
use TagX::TAG::NoBody 1.03;

@ISA = qw (TagX::TAG::NoBody);

sub finalize
{
    my ($self, $tx, @context) = @_;

    my %options = ('AutoCommit=s'	=> 1,
		   'PrintError=s'	=> 1,
		   'RaiseError=s'	=> 1,
		   'ChopBlanks=s'	=> 0,
		   'dbname=s'		=> '_anonymous_',
		   'data-source=s'	=> undef,
		   'username=s'		=> undef,
		   'password=s'		=> undef);
    my @argv = $self->parse_options (\%options, @context);
    my $verbose = $self->verbose;

    if ( $verbose ) {
	my ($key, $value);
	my $str = "$self: Options are\n";
	while (($key, $value) = each %options) {
	    $str .= "\t$key .. ($value)\n";
	}
	&log_message( $self, "$str\n" );
    }

    $options{'data-source'} = "@argv" if @argv > 0 and not defined($options{'data-source'});

    my $dbh = DBI->connect ( @options{qw (data-source username password)},
			     {'AutoCommit' => $options{'AutoCommit'},
			      'PrintError' => $options{'PrintError'},
			      'RaiseError' => $options{'RaiseError'},
			      'ChopBlanks' => $options{'ChopBlanks'}} );

    unless ( $dbh ) {
	&log_message( $self, "Unable to connect to database: $DBI::errstr" );
	return;
    }

    &log_message( $self, "Connected to database, handle = <$dbh>\n" ) if $verbose;

    $tx->{'DB'} = {} unless exists $tx->{'DB'};
    my $name = $options{'dbname'};
    if ( exists $tx->{'DB'}->{$name} ) {
	&log_message( $self, "Disconnecting previous DB connection named ($name)\n" );
	$tx->{'DB'}->{$name}->disconnect;
    }
    $tx->{'DB'}->{$name} = $dbh;
}

