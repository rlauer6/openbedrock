#!/usr/bin/perl -w

# ident "@(#) $Header$"
# ident "@(#)        $Name$"

package TagX::TAG::NoBody::SQLConnect;

use strict;

BEGIN
{
    use vars	qw ($VERSION @ISA);
    $VERSION	= do { my @r = (q$Revision$ =~ /\d+/g); sprintf "%d."."%02d" x $#r, @r };
}

use DBI;

use TagX::TAG::NoBody;

@ISA = qw (TagX::TAG::NoBody);

sub finalize
{
    my ($self, $tx, @context) = @_;

    my %options = ('AutoCommit'		=> 1,
		   'PrintError'		=> 1,
		   'RaiseError'		=> 0,
		   'ChopBlanks'		=> 0,
		   'dbname=s'		=> '_anonymous_',
		   'data-source=s'	=> undef,
		   'username=s'		=> undef,
		   'password=s'		=> undef);
    my @argv = $self->parse_options (\%options, @context);
    my $verbose = $self->verbose;

    if ( $verbose ) {
	my ($key, $value);
	my $str = "$self: Options are\n";
	while (($key, $value) = each %options) {
	    $str .= "\t$key .. ($value)\n";
	}
	$tx->log_message( MSG_DEBUG => $str );
    }

    my $dbh = DBI->connect ( @options{qw (data-source username password)},
			     {'AutoCommit' => $options{'AutoCommit'},
			      'PrintError' => $options{'PrintError'},
			      'RaiseError' => $options{'RaiseError'},
			      'ChopBlanks' => $options{'ChopBlanks'}} );

    $tx->log_message ( MSG_DEBUG => "$self: Connected to database, handle = <$dbh>")
	if $verbose;

    $tx->{'DB'} = {} unless exists $tx->{'DB'};
    my $name = $options{'dbname'};
    if ( exists $tx->{'DB'}->{$name} ) {
	$tx->log_message ( MSG_DEBUG => "Disconnecting previous DB connection named ($name)")
	    if $verbose;
	$tx->{'DB'}->{$name}->disconnect;
    }
    $tx->{'DB'}->{$name} = $dbh;
}

