#!/usr/bin/perl -w

# ident "@(#) $Header$"
# ident "@(#)        $Name$"

package TagX::TAG::NoBody::SQLConnect;

use strict;
use vars qw (@ISA);
use Getopt::Long;
use DBI;

use TagX::TAG::NoBody;
@ISA = qw (TagX::TAG::NoBody);

sub finalize
{
    my ($self, $tx, @context) = @_;

    $tx->log_message ( MSG_DEBUG => "Finalizing $self, args is <@{$self->{'argv'}}>");
    local (@ARGV) = @{$self->{'argv'}};
    my %valid = ('AutoCommit'	=> 1,
		 'PrintError'	=> 1,
		 'RaiseError'	=> 0,
		 'ChopBlanks'	=> 0);
    &GetOptions(\%valid,
		'dbname=s',
		'data-source=s',
		'AutoCommit=i',
		'PrintError=i',
		'RaiseError=i',
		'ChopBlanks=i',
		'username=s',
		'password=s');

    $tx->log_message ( MSG_INFO => "Connecting to $valid{'data-source'} with username = $valid{'username'} and password = $valid{'password'}");

    my $dbh = DBI->connect ( @valid{qw (data-source username password)},
			     {'AutoCommit' => $valid{'AutoCommit'},
			      'PrintError' => $valid{'PrintError'},
			      'RaiseError' => $valid{'RaiseError'},
			      'ChopBlanks' => $valid{'ChopBlanks'}} );

    $tx->{'DB'} = {} unless exists $tx->{'DB'};
    my $name = $valid{'dbname'} || '_anonymous_';
    $tx->{'DB'}->{$name}->disconnect if exists $tx->{'DB'}->{$name};
    $tx->log_message( MSG_INFO => "Connected to database .. handle is <$dbh>, name is <$name>" );
    $tx->{'DB'}->{$name} = $dbh;
}

