use strict;
use warnings;

use Bedrock::Model;

use Role::Tiny;

sub _create_model {
    shift->_model(@_)->create_table();
}

sub _migrate_model {
    return shift->_model(@_)->migrate_model;
}

sub _verify_model {
    return shift->_model(@_)->verify_model;
}

sub _rename_field {
  my $self = shift;
  my $dbi = shift;
  
  return $self->_model($dbi)->rename_field(@_);
}

sub _model {
    my $class = shift;
    $class = ref($class) || $class;
    my $dbi = shift;

    no strict 'refs';
    
    my $model;
      
    if ( ${ $class . '::MODEL' } ) {
      $model = new Bedrock::Model(
				  {
				   table => $class->__table_name,
				   model => ${ $class . '::MODEL' },
				   dbi   => $dbi
				  }
				 );
    }
    
    $model;
}

sub __table_name {
    my $class = ref( $_[0] ) || $_[0];

    $class =~ /::([^:]+)$/ ? lc($1) : undef;
}

1;
