sub close
{
    my $self = shift;

    $self->private->{'pdfmaker'}->close;
    my $dref = $self->private->{'data'};
    &log_message( undef, "$self->close() invoked .. have "
		  . length($$dref) . " bytes of data" ) if $self->{'verbose'};
    &log_message( undef, "$self->close(): PDF follows\n"
		  . $$dref ) if $self->{'verbose'} > 1;
    $dref;
}

