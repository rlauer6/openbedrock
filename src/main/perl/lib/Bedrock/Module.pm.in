#!/usr/local/bin/perl -w

package Bedrock::Module;

use Tie::Hash;
@ISA = qw(Tie::Hash);

sub TIEHASH
{
    my ($class, $cgi) = @_;
    my $self = bless {}, $class;
    $self->{'__cgi'} = $cgi;
    $self;
}

sub FETCH
{
    my $self = shift;
    my $key = shift;

    $self->fetch( $self->{'__cgi'}, $key );
}

1;
