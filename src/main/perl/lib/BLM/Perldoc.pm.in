#!/usr/local/bin/perl -w

# ident "@(#) $Header$"
# ident "@(#)        $Name$"

package BLM::Perldoc;

use strict;
use Pod::Html;
use File::Find;
use Cwd;
use POSIX qw(tmpnam);

BEGIN
{
    use Exporter ();
    use vars	qw ($VERSION @ISA);
    $VERSION	= do { my @r = (q$Revision$ =~ /\d+/g); sprintf "%d."."%02d" x $#r, @r };
}

use TagX::Log 1.01;
use SIS::Hash;
use SIS::Array;

@ISA = qw( SIS::Hash );

sub TIEHASH
{
    my $class = shift;
    my $self = SIS::Hash->new;
    bless $self, $class;
    $self->{'perl_version'} = $];
    $self->{'INC'} = \@INC;
    $self;
}

sub list
{
    my $self = shift;
    my $array = SIS::Array->new;
    my @dirs = @_ > 0 ? @_ : @INC;
    for my $path (@dirs) {
	# Reduce to absolute path
	my $abs = $path =~ m!^/! ? $path : &Cwd::abs_path($path);

	# Skip if root
	next if $abs =~ m!^/$!;
	find( sub { push @{$array}, $File::Find::name if /\.pm$/; }, $abs );
    }
    $array;
}

sub search
{
    my $self = shift;
    die "Usage: Perldoc->search( <Pattern> .. )\n" unless @_ > 0;
    my $list = $self->list;
    my $array = SIS::Array->new;
    for my $pattern (@_) {
	push @{$array}, grep(/$pattern/i, @{$list});
    }
    $array;
}

sub html
{
    my $self = shift;
    my $module_path = shift;
    die "Usage: Perldoc->html( module_path )\n" unless defined($module_path);
    my $outfile = tmpnam;
    &pod2html('--infile', $module_path, '--outfile', $outfile);
    open(FILE, $outfile) or die "Unable to open $outfile: $!\n";
    local $/ = undef;
    my $data = <FILE>;
    close FILE;
    unlink $outfile;
    $data;
}

1;

