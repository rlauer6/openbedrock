package BLM::File;

use strict;

BEGIN
{
    use Exporter ();
    use vars	qw ($VERSION @ISA);
    $VERSION	= do { my @r = (q$Revision$ =~ /\d+/g); sprintf "%d."."%02d" x $#r, @r };
}

use IO::File;
use TagX::Log 1.01;
use SIS::Array 1.01;
@ISA = qw(SIS::Array);

sub TIEARRAY
{
    my $class = shift;
    my $filename = shift;

    open( FILE, $filename ) or die "Unable to open $filename for reading: $!\n";
    my $self = bless [<FILE>], $class;
    close FILE;
    $self;
}

sub FETCH
{
    my ($self, $index) = @_;
    {LINE => $self->[$index]};
}

1;

