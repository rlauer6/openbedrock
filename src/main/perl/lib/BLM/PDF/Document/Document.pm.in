package BLM::PDF::Document::Document;

use strict;
use lib '/export/home/aviert/modules';
use BLM::PDF::Document::Page;
use BLM::PDF::Text::TextProperties;

sub new
{
   my $class = shift;
   my $this = shift;

   unless( ref $this )
   { $this = {}; }

   $$this{'pages'} 		= [];
   $$this{'use_outlines'}	= 0;
   $$this{'text_properties'}    = new BLM::PDF::Text::TextProperties;

   bless($this, $class);
   return $this;
} # sub new

sub newPage
{
   my $this = shift;
   my $args = shift;
   $args = {} unless defined($args) && ref($args) == 'HASH';
   my $page = new BLM::PDF::Document::Page;
   $page->setOutlineHeaderText($$args{'outline_header_text'});
   $page->setParent($this);
   my $pages = $$this{'pages'};
   push(@$pages, $page);
   return $page;
} # sub newPage

sub getPages
{
   my $this = shift;
   my $pages = $$this{'pages'};
   return @$pages;
} # sub getPages

sub setUseOutlines
{
   my $this = shift;
   my $value = shift;
   $$this{'use_outlines'} = defined($value) && $value ? 1 : 0;
} # sub useOutlines

sub getUseOutlines
{
   my $this = shift;
   return $$this{'use_outlines'};
} # sub getUseOutlines

sub setTextProperties
{
   my $this = shift;
   my $properties = shift;
   $$this{'text_properties'} = $properties if ref $properties;
} # sub setTextProperties

sub getTextProperties
{
   my $this = shift;
   my $properties = shift;
   return $$this{'text_properties'};
} # sub setTextProperties

1;
