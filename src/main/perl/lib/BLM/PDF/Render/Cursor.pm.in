package BLM::PDF::Render::Cursor;

use BLM::PDF::Log;
use strict;

sub new
{
   return bless [0, 0], shift unless scalar @_ == 3;
   return bless([@_[1], @_[2]], @_[0]);
} # sub new

sub set
{
   my $this = shift;
   $this->[0] = shift;
   $this->[1] = shift;
} # sub set

sub advance
{
   my $this = shift;
   $this->[0] += shift;
   $this->[1] += shift;
} # sub advance

sub x
{
   my $this = shift;
   return $this->[0];
} # sub x

sub y
{
   my $this = shift;
   return $this->[1];
} # sub y

1;

