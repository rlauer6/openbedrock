package BLM::PDF::Render::Object::Registry;

use BLM::PDF::Log;
use strict;



# The named objects here are important and may need
# to be referenced by other objects when they try
# to render themselves. Anonymous objects appear as
# elements in the 'objects' entry.
sub new
{
   my $class = shift();

   my $this = { 'document_catalog'   => undef,
		'page_tree'	     => undef,
                'next_object_number' => 1,
	        'objects'	     => [],
	      };
   bless($this, $class);
   return $this;
} # sub new

sub getNextObjectNumber { return ${_[0]}->{'next_object_number'}; }
sub nextObjectNumber 	{ return ${_[0]}->{'next_object_number'}++; }

sub setObject
{
   my $this = shift;
   my ($key, $ob) = @_;
   die "Unknown registry key '$key'" unless exists $$this{$key};
   $$this{$key} = $ob;
   push @{$this->{'objects'}}, $ob;
} # sub setObject

sub getObject
{
   my $this = shift;
   my $key = shift;

   return $$this{$key};
} # sub getObject

sub addObject
{
   my $this = shift;
   my $object = shift;
   push @{$this->{'objects'}}, $object if ref $object;
} # sub addObject

1;

#ObjectRegistry.pm
