package BLM::PDF::Text::Font;

require 5.005;
use BLM::PDF::Defaults;
use strict;

=pod
=head1 Synopsis
Font objects contain information about a font to be used

=over 4

=item *
B<name>           Logical name of the font. 

=item *
B<subtype>        The subtype of the font. Default 'WinAnsi'

=back

=cut

my $fontnum = 1;

sub new
{
   my $ref = shift;

   my $this = { 'name'		=> $BLM::PDF::Defaults::Defaults{'font'},
		'encoding'	=> 'WinAnsi',
	        'handle'	=> 'F'.$fontnum++,
              };

   bless($this, $ref);

   return($this);
} # sub new

sub copy
{
   my $template = shift;
   my $this = {};
   %$this = %$template;
   return bless $this, ref($template);
} # sub copy

sub setFontName
{
   my $this = shift;
   my ($name, $subtype) = @_;

   $$this{'name'} = $name if defined($name) && length($name);
} # sub setFontName

sub getFontName
{
   my $this = shift;
   return $$this{'name'};
} # sub getFontName

sub getFontHandle
{
   my $this = shift;
   return $$this{'handle'};
} # sub getFontHandle

1;
