#!/usr/local/bin/perl -w

# ident "@(#) $Header$"
# ident "@(#)        $Name$"

package BLM::Stat;

use strict;

BEGIN
{
    use Exporter ();
    use vars	qw ($VERSION @ISA);
    $VERSION	= do { my @r = (q$Revision$ =~ /\d+/g); sprintf "%d."."%02d" x $#r, @r };
}

use SIS::Hash;

@ISA = qw( SIS::Hash );

sub TIEHASH
{
    my $class = shift;
    my $file = shift;
    die "Usage: $class::new(file)\n" unless defined($file);
    my @l = stat($file);
    die "$class::new(): unable to stat $file: $!\n" unless @l;
    my $self = bless SIS::Hash->new, $class;
    @{$self}{qw(dev ino mode nlink uid gid rdev size atime mtime ctime blksize blocks)} = @l;
    $self;
}

1;

