#!/usr/local/bin/perl -w
#
# It's all a hack..J. will do it better, but this works to some degree for now...
#
package BLM::Number;

use strict;

BEGIN
{
    use Exporter ();
    use vars	qw ($VERSION @ISA);
    $VERSION	= do { my @r = (q$Revision$ =~ /\d+/g); sprintf "%d."."%02d" x $#r, @r };
}

use TagX::Log 1.01;
use SIS::Hash 1.01;

@ISA = qw(SIS::Hash);

#
# new(number)
#
sub TIEHASH
{
    my $class = shift;
    my $val = shift;

    my $self = bless {}, $class;
    $self->{'value'} = $val;

    $self;
}

sub FETCH 
{
    my $self = shift;

    my $what = shift;

    return $self->{$what};
}


sub add
{
    my $self = shift;

    my $val = $self->{'value'};
    
    my $addthis = shift;
    warn "$val + $addthis being added";

    $val += $addthis;

    return $val;
}

sub minus
{
    my $self = shift;

    my $val = $self->{'value'};
    $val -= shift;

    return $val;
}

sub times
{
    my $self = shift;

    my $val = $self->{'value'};
    $val *= shift;

    return $val;
}

sub divide
{
    my $self = shift;

    my $val = $self->{'value'};
    $val /= shift;

    return $val;
}

sub printf
{
    my $self = shift;

    my $str = shift;
    
    $str = sprintf($str, $self->{'value'});

    return $str;
}

sub nmod
{
    my $self = shift;

    my $n = shift;
    my $m = $self->{'value'};
    $m = ($m - 1)/$n;
    $m = int($m) + 1;
    
    return $m;
}

1;
