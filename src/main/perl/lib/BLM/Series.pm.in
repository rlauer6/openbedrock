package BLM::Series;

use strict;

BEGIN
{
    use Exporter ();
    use vars	qw ($VERSION @ISA);
    $VERSION = do { my @r = (q$Revision$ =~ /\d+/g); sprintf "%d."."%02d" x $#r, @r };
}

use TagX::Log;
use Bedrock::Hash;
use Bedrock::Array;

@ISA = qw(Bedrock::Hash);

sub TIEHASH
{
    my $class = shift;

    my $self = bless {}, $class;

    $self;
}

sub FETCH 
{
    my $self = shift;

    my $what = shift;

    return $self->{$what};
}

sub arithmetic
{
    my $self = shift;

    my $start = shift;
    my $period = shift;
    my $length = shift;

    my $series = Bedrock::Array->new;

    for (my $i=0; $i<$length; $i++) {
	push @{$series}, $start;
	$start += $period;
    }

    return $series;
}

1;



