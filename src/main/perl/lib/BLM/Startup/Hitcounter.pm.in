package BLM::Startup::Hitcounter;

use strict;

BEGIN
{
    use Exporter ();
    use vars	qw ($VERSION @ISA);
    $VERSION	= do { my @r = (q$Revision$ =~ /\d+/g); sprintf "%d."."%02d" x $#r, @r };
}

use POSIX;
use SDBM_File;
use SIS::Hash;
@ISA = qw(SIS::Hash);

sub TIEHASH
{
    my ($class, $ctx, $config) = @_;

    die "$class->TIEHASH(): `db_path' not defined in config.\n"
	unless $config->{'db_path'};

    die "BEDROCK_URI not set in environment: Cannot continue.\n"
	unless $ENV{'BEDROCK_URI'};

    my $self = bless {}, $class;
    $self->{'me'} = $ENV{'BEDROCK_URI'};
    $self->{'config'} = $config;
    $self;
}

sub FETCH
{
    my $self = shift;
    my $key = shift;
    return $self->{$key} if exists $self->{$key};
    if ( $key =~ /^(count|dated|viewed_by)$/ ) {
	# First time thru'
	# Get the hitcount database path
	my $db = $self->{'config'}->{'db_path'};
	return unless $db;
	my %counts;
	tie %counts, 'SDBM_File', $db, O_CREAT|O_RDWR, 0640;
	my $str = $counts{$self->{'me'}};
	my ($count, $dated, $viewed_by) = split /:/, $str;
	$count++;
	$counts{$self->{'me'}} = sprintf "%d:%ld:%s", $count, time, $ENV{'REMOTE_ADDR'};
	$self->{'count'} = $count;
	$self->{'dated'} = $dated;
	$self->{'viewed_by'} = $viewed_by;
	return $self->{$key};
    }
    undef;
}

1;

