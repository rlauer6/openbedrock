package BLM::Startup::Cookie;

use strict;

BEGIN
{
    use Exporter ();
    use vars	qw ($VERSION @ISA);
    $VERSION	= do { my @r = (q$Revision$ =~ /\d+/g); sprintf "%d."."%02d" x $#r, @r };
}

use TagX::Log 1.01;
use SIS::Hash 1.01;
@ISA = qw(SIS::Hash);

sub TIEHASH
{
    my $class = shift;
    my $cgi = shift;

    my $self = bless {}, $class;
    for my $name ($cgi->getCookieValue) {
	$self->{$name} = $cgi->getCookieValue ($name);
    }
    $self;
}

1;

