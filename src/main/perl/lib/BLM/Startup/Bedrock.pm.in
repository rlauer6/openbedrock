#!/usr/local/bin/perl -w

# ident "@(#) $Header$"
# ident "@(#)        $Name$"

package BLM::Startup::Bedrock;

use strict;

BEGIN
{
    use Exporter ();
    use vars	qw ($VERSION @ISA);
    $VERSION	= do { my @r = (q$Revision$ =~ /\d+/g); sprintf "%d."."%02d" x $#r, @r };
}

use TagX::Log 1.01;
use SIS::Hash 1.01;
@ISA = qw(SIS::Hash);

sub FETCH
{
    my $self = shift;
    my $key = shift;
    for ($key) {
	/^version$/oi and return $Text::TagX::VERSION;
    }
}

sub require_version
{
    my $self = shift;
    my $version = shift;
    &log_message( undef, "Require version [$version]" );
    die "Require version $version. This version is only $Text::TagX::VERSION\n"
	unless $Text::TagX::VERSION >= $version;
}

sub makeHash
{
    my $self = shift;
    my $class = shift;
    my $href = {};
    tie %{$href}, $class, @_;
    bless $href, $class;
}

sub makeArray
{
    my $self = shift;
    my $class = shift;
    my $aref = [];
    tie @{$aref}, $class, @_;
    bless $aref, $class;
}

1;

