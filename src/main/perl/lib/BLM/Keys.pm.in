package BLM::Keys;

use strict;

BEGIN
{
    use Exporter ();
    use vars	qw ($VERSION @ISA);
    $VERSION	= do { my @r = (q$Revision$ =~ /\d+/g); sprintf "%d."."%02d" x $#r, @r };
}

use UNIVERSAL qw (isa);
use TagX::Log 1.01;
use SIS::Array 1.01;
@ISA = qw(SIS::Array);

sub TIEARRAY
{
    my $class = shift;
    my $href = shift;
    die "Cannot loop over keys of [$href]: not a hash\n"
	unless &isa( $href, 'HASH' );

    my $keyname = ( @_ > 0 ? shift : 'KEY');
    my $valuename = ( @_ > 0 ? shift : 'VALUE');

    my @keys = keys %{$href};
    my $self = bless [$keyname, $valuename, $href, @keys], $class;
    $self;
}

sub FETCH
{
    my ($self, $index) = @_;
    my $key = $self->[$index + 3];
    scalar( {$self->[0] => $key,
	     $self->[1] => $self->[2]->{$key}} );
}

sub FETCHSIZE
{
    my $self = shift;
    scalar(@{$self} - 3);
}

1;

