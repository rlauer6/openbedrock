#!/usr/local/bin/perl -w

# ident "@(#) $Header$"
# ident "@(#)        $Name$"

use File::Basename;

BEGIN {
    # Hack to get `???/Bedrock/' in the right place in @INC
    my $txpath = $INC{'Bedrock.pm'} || $0;
    if ( $txpath ) {
	my $act = dirname( $txpath );
	for (my $i = 0 ; $i < @INC ; $i++ ) {
	    if ( $act eq $INC[$i] ) {
		splice @INC, $i + 1, 0, $act . '/Bedrock', $act . '/Bedrock/Text';
		last;
	    }
	}
    }
}

use SIS::Base;
use SIS::Log;
use Text::TagX;

1;

