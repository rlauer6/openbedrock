# - Apache2 mod_perl script to be run during Apache startup for example by specifying:
#
#   PerlRequire /usr/local/share/bedrock/config/startup.pl
#
use strict;
use warnings;

use Data::Dumper;
use English qw(-no_match_vars);

BEGIN {
  require Bedrock::Cache;

  if ( my $engine = $ENV{BEDROCK_CACHE_ENGINE} ) {
    my $cache = eval { Bedrock::Cache->new( create => 1, engine_name => $engine ); };

    if ( $cache  ) {
      print {*STDERR} sprintf "Caching enabled with engine %s\n", $engine;
    }
    else {
      print {*STDERR} sprintf "Error initializing caching with engine %s\n", $engine;
      print {*STDERR} $EVAL_ERROR;
    }
  }
}

use Apache2::compat;

use Bedrock;
use Text::TagX;
use POSIX;

1;

__END__
