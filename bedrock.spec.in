# --> WEBSITE
%package website

Requires: bedrock

Summary:  @PACKAGE@-website

Group:    Development/Tools

%description website

%files website

%defattr(-,root,root)
#%config(noreplace) /etc/httpd/conf.d/perl_bedrock.conf

%{_libdir}/bedrock/config/startup.pl
%{_libdir}/bedrock/config/bedrock-rest-framework.conf
%{_libdir}/bedrock/config/perl_bedrock.conf22
%{_libdir}/bedrock/config/perl_bedrock.conf24

%defattr(-,apache,apache)
/var/www/include
/var/www/pebbles
/var/www/session
/var/www/log

/var/www/cgi-bin/bedrock.cgi
/var/www/html/error.roc
/var/www/html/index.rock
/var/www/html/itworks.rock
/var/www/html/notworking.html
/var/www/html/bedrock

%post website

set -x

mkdir -p /var/www/config
mkdir -p /var/www/config.d/plugin

chown apache:apache /var/www/config
chown -R apache:apache /var/www/config.d

cat %{_libdir}/bedrock/config/tagx.xml | perl -np -e 's|BEDROCK_CONFIG_PATH">.*?<|BEDROCK_CONFIG_PATH">/var/www/config<|' > /var/www/config/tagx.xml

apache_version=$(httpd -v | head -1 | sed 's/^.*Apache\///' | \
  awk '{print $1}' | cut -d'.' -f 1,2 | sed 's/\.//')
  
if test -n "$apache_version"; then
  cp %{_libdir}/bedrock/config/perl_bedrock.conf${apache_version} /etc/httpd/conf.d/perl_bedrock.conf
else
  echo "WARNING: could not determine Apache version...using Apache 2.2 configuration"
  cp %{_libdir}/bedrock/config/perl_bedrock.conf22 /etc/httpd/conf.d/perl_bedrock.conf
  
fi

