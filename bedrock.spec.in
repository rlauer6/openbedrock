%post mysql-session

if ! test -d %{_libdirdir}/bedrock/config.d/startup; then
    mkdir -p %{_libdir}/bedrock/config.d/startup
fi

if ! test -e %{_libdir}/bedrock/config.d/startup/mysql-session.xml; then
    cp %{_libdir}/bedrock/config/mysql-session.xml %{_libdir}/bedrock/config.d/startup/mysql-session.xml
fi

