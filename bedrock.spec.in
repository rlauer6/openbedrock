%post website

mkdir -p /var/www/config
mkdir -p /var/www/config.d/plugin

chown apache:apache /var/www/config
chown -R apache:apache /var/www/config.d

cat %{_libdir}/bedrock/config/tagx.xml | perl -np -e 's|BEDROCK_CONFIG_PATH">.*?<|BEDROCK_CONFIG_PATH">/var/www/config<|' > /var/wwww/config/tagx.xml

