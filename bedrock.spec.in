%post postgres-session

if ! test -d %{_libdirdir}/bedrock/config.d/startup; then
    mkdir -p %{_libdir}/bedrock/config.d/startup
fi

if ! test -e %{_libdir}/bedrock/config.d/startup/postgres-session.xml; then
    # we need a Postgres config file example
    if test -e %{_libdir}/bedrock/config/postgres-session.xml; then
	cp %{_libdir}/bedrock/config/postgres-session.xml %{_libdir}/bedrock/config.d/startup/postgres-session.xml
    fi
fi

